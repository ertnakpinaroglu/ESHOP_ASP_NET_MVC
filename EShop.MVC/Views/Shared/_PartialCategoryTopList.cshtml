@using EShop.MVC.Models
@model CategoryViewModel
@{ 
    Layout = null;
}
<div class="menu-nav">
    <span class="menu-header">Menu <i class="fa fa-bars"></i></span>
    <ul class="menu-list">
        <li><a href="#">Anasayfa</a></li>
        <li><a href="#">Hızlı Alışveriş</a></li>
        @foreach (var item in Model.LisCategory)
        {
            <li class="dropdown mega-dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">@item.CategoryName <i class="fa fa-caret-down"></i></a>
            <div class="custom-menu">
                <div class="row">
                    <div class="col-md-4">
                        <ul class="list-links">
                            <li>
                                <h3 class="list-links-title">@item.CategoryName</h3>
                            </li>
                            @foreach (var subCategory in item.SubCategories.ToList())
                            {
                                <li><a href="#">@subCategory.SubCategoryName</a></li>
                            }
                            
                            
                        </ul>
                        <hr class="hidden-md hidden-lg">
                    </div>
                
                </div>
                <div class="row hidden-sm hidden-xs">
                    <div class="col-md-12">
                        <hr>
                        <a class="banner banner-1" href="#">
                            <img src="~/img/banner05.jpg" alt="">
                            <div class="banner-caption text-center">
                                <h2 class="white-color">YENİ KOLEKSİYON</h2>
                                <h3 class="white-color font-weak">KAÇIRMA</h3>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </li>
        }
        <li><a href="#">Satış</a></li>
        <li class="dropdown default-dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">Diger <i class="fa fa-caret-down"></i></a>
            <ul class="custom-menu">
                <li><a href="/Home/Index">Anasayfa</a></li>
                <li><a href="/Product/AllProducts">ürünlerimiz</a></li>
              
                <li><a href="#">Kontrol Et</a></li>
            </ul>
        </li>
    </ul>
</div>
