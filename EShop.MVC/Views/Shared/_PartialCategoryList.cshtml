@using EShop.MVC.Models
@model CategoryViewModel
@{ 
    Layout = null;
}

<ul class="category-list" id="liste" >
    @foreach (var item in Model.LisCategory)
    {

    
    <li class="dropdown side-dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">@item.CategoryName <i class="fa fa-angle-right"></i></a>
        <div class="custom-menu">
            <div class="row">
                <div class="col-md-4">
                    <ul class="list-links">
                        <li>
                            <h3 class="list-links-title">@item.CategoryName </h3>
                        </li>
                        
                        @foreach (var subCategory in item.SubCategories.ToList())
                        {
                            <li><a href="#">@subCategory.SubCategoryName </a></li>
                        }


                    </ul>
                    <hr class="hidden-md hidden-lg">
                </div>
               
            </div>
            <div class="row hidden-sm hidden-xs">
                <div class="col-md-12">
                    <hr>
                    <a class="banner banner-1" href="#">
                        <img src="~/img/banner05.jpg" alt="">
                        <div class="banner-caption text-center">
                            <h2 class="white-color">YENİ KOLEKSİYON </h2>
                            <h3 class="white-color font-weak"> KAÇIRMA! </h3>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </li>
    }
</ul>
