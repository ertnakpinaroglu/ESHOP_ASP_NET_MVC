@model EShop.EntitiesLayer.Entities.Customer
    @{
        ViewBag.Title = "MyAccount";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
<script src="~/js/jquery.min.js"></script>
    <div class="container" style="margin-top:60px;" >
        <div class="row">
            <h2 class="text-center">@Model.Username adlı kullanıcının Profili </h2>
            <div class=" col-md-push-3 col-md-4">
                <img  src="@Model.ProfileImage" class="img-responsive img-circle" width="125" />
               
            </div>

            <div class="col-md-3 col-md-push-1 ">
                <div class="row">
                    <div class="col-md-12">
                        <form class=" form-horizontal"  method="post" >


                            <div class="form-group">
                                Ad <input type="text" class="form-control" value="@Model.CustomerName" />
                            </div>

                            <div class="form-group">

                               Soyad <input type="text" class="form-control" value="@Model.CustomerSurname" />
                            </div>

                            <div class="form-group">
                                Email: <input type="text" class="form-control" value="@Model.Email" />
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-success" > Güncelle </button>
                            </div>

                            @*<div class="form-group">
                                <div class="alert alert-danger"> Resim güncelle
                                    <input type="file"   />
                                </div>
                            </div>*@

                            
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-3 col-md-push-2  ">
                <div class="alert alert-danger">
                    <a href="" class="btn btn-primary" title="Yorumlarım" >
                        <span class="fa fa-comment"></span>
                    </a>
                    <a href="" class="btn btn-danger" title="Favorilerim" >
                        <span class="fa fa-heart"></span>
                    </a>
                    <a href="" class="btn btn-warning" title="Sepetim" >
                        <span class="fa fa-shopping-basket"></span>
                    </a>
                </div>
            </div>
        </div>

        <div class="row">


        </div>



    </div>

<script type="text/javascript">
    $(function () {
        var footer = $("#footer");
        footer.hide();
    });
</script>


