@model EShop.EntitiesLayer.Entities.Customer

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #panelLogin{
        margin-top:50px;
       
    }
    .validation-summary-errors {
        background-color: #b94a48;
       
        color: white;
        border-radius: 5px;
        margin-top: 15px;
    }
</style>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
   
       
      
    <div class="container">
       
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-success" id="panelLogin">
                    <div class="panel-heading">
                        <h3 class="panel-title">Giriş </h3>
                    </div>
                    
                    <div class="panel-body">
                        <div class="input-group">
                            <span class="input-group-addon" id="basic"><i class="fa  fa-user"></i></span>
                          
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control",placeholder="Kullanıcı Adı giriniz", id = "basic" } })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>
                        
                        <div class="input-group">
                            <span class="input-group-addon" id="basic2"><i class="fa  fa-lock"></i></span>
                            
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type="password", placeholder = "Şifre giriniz", id = "basic2" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger text-center" })
                    </div>

                    <div class="panel-footer clearfix">
                        <div class="form-group pull-right">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Giriş Yap" class="btn btn-success" />
                            </div>
                        </div>

                        <div class="form-group pull-left">
                            <div class="col-md-offset-2 col-md-10">
                                <a href="/Customer/Register"  class="btn btn-danger" > 
                                    <span class="fa fa-registered"></span> Hesabınız Yok mu? 
                                </a>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
   
    
       
    
}


