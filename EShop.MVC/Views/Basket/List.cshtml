@using EShop.EntitiesLayer.Entities
@model List<Sale>
@{ 
    Layout = null;
    
}

<li class="header-cart dropdown default-dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
        <div class="header-btns-icon">
            <i class="fa fa-shopping-cart"></i>
            <span class="qty">@Model.Count()</span>
        </div>
        <strong class="text-uppercase">Sepetim: </strong>
        <br>
        <span>@Model.Sum(m=>m.Product.UnitPrice) TL </span>
    </a>
    <div class="custom-menu">
        <div id="shopping-cart">
            <div class="shopping-cart-list">
                @foreach (var item in Model)
                {


                <div class="product product-widget">
                    @foreach (var item2 in item.Product.ImageFiles.Take(1).ToList())
                    {
                        <div class="product-thumb">
                            <img src="@item2.ProfileImage" alt="">
                        </div>
                    }
                   
                    <div class="product-body">
                        <h3 class="product-price">@item.Product.UnitPrice <span class="qty">x3</span></h3>
                        <h2 class="product-name"><a href="#">@item.Product.ProductName</a></h2>
                    </div>
                    <a href="/Basket/RemoveBasket/@item.SaleId" class="cancel-btn"><i class="fa fa-trash"></i></a>
                </div>
                }
             
            </div>
            <div class="shopping-cart-btns">
                <button class="main-btn">View Cart</button>
                <button class="primary-btn">Checkout <i class="fa fa-arrow-circle-right"></i></button>
            </div>
        </div>
    </div>
</li>
<!-- /Cart -->
<!-- Mobile nav toggle-->
<li class="nav-toggle">
    <button class="nav-toggle-btn main-btn icon-btn"><i class="fa fa-bars"></i></button>
</li> 
<!-- / Mobile nav toggle -->
